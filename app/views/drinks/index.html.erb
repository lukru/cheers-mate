<body class="drinkspage"></body>

<% 
css_class = ""
css_class_hide = ""
border_class = ""
more_info = ""
info_class = ""
moneys_class = ""
drink_description = ""
drink_title = ""
  if params[:friends] || params[:user_id]
    css_class = "col-md-6 col-md-offset-3" 
    css_class_hide = "hide-show"
    border_class = "img-border"
    info_class = "img-info"
    more_info = "more-info"
    drink_description = "drink-description"
    moneys_class = "moneys"
    drink_title = "drink-title"
  end
%>

<% 
css_class2 = ""
css_class3 = ""
css_class4 = ""
italic_class = ""
wrapper_class = ""
hide_price = ""
  if params[:all] = true && !params[:friends] && !params[:user_id]
    css_class2 = "view view-first"
    css_class3 = "mask"
    css_class4 = "info"
    italic_class = "italic"
    wrapper_class = "drinks-wrapper"
    hide_price = "hide-price"
  end
%>

<div class="container-fluid <%= wrapper_class %>">
  <div class="row">
    <% @drinks.each do |drink| %>
    <div class="col-md-4 col-sm-6 col-sx-12 <%= css_class %>">
      <div class="<%= css_class2 %>">
        <%= image_tag drink.image_url(:thumb), :width => '100%', class: border_class %>
        <div class="<%= css_class3 %> <%= info_class %>">
          <h2 class="<%= drink_title %>"><%= drink.name %></h2><h3 class="<%= moneys_class %> <%= hide_price %>"><%= number_to_currency(drink.price, :unit => "$") %></h3>
          <p class="<%= more_info %>">
            <span class="<%= italic_class %>"><%= drink.location %></span><br>
            <span class="<%= italic_class %>"><%= drink.city %></span><br>
            <span class="<%= drink_description %>"><%= drink.description %></span><br>
            <span class="<%= css_class_hide %>">
              <%= link_to 'More please', drink, :class => 'info' %>
            </span>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
