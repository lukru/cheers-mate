<% css_class = ""
css_class_hide = ""
  if params[:friends] || params[:user_id]
    css_class = "col-md-6 col-md-offset-3" 
    css_class_hide = "hide-show"
  end
%>

<% css_class2 = ""
css_class3 = ""
css_class4 = ""
italic_class = ""
  if params[:all] = true && !params[:friends] && !params[:user_id]
    css_class2 = "view view-first"
    css_class3 = "mask"
    css_class4 = "info"
    italic_class = "italic"
  end
%>


<div class="container-fluid">
  <div class="row">
    <% @drinks.each do |drink| %>
    <div class="col-md-4 col-sm-6 col-sx-12 <%= css_class %>">
      <div class="<%= css_class2 %>">
        <%= image_tag drink.image_url(:thumb), :width => '100%' %>
        <div class="<%= css_class3 %>">
          <h2><%= drink.name %></h2>
          <p>
            <%= drink.description %><br>
            <span class="<%= italic_class %>"><%= drink.location %></span><br>
            <span class="<%= css_class_hide %>">
            <%= link_to 'More please', drink, :class => 'info' %>
            </span>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>