<% css_class = ""
  if params[:friends] || params[:user_id]
    css_class = "col-md-6 col-md-offset-3" 
  end
%>

<% css_class2 = ""
css_class3 = ""
css_class4 = ""
css_class5 = ""
  if params[:all] = true && !params[:friends] && !params[:user_id]
    css_class2 = "view view-two"
    css_class3 = "mask mask-1"
    css_class4 = "mask mask-2"
    css_class5 = "content"
  end
%>


<div class="container-fluid">
  <div class="row">
    <% @drinks.each do |drink| %>

    <div class="col-md-4 col-sm-6 col-sx-12 <%= css_class %>">
    <div class="<%= css_class2 %>">
      <%= image_tag drink.image_url(:thumb), :width => '100%' %>
      <div class="<%= css_class3 %>"></div>
      <div class="<%= css_class4 %>"></div>

      <div class="<%= css_class5 %>">
        <h2><%= link_to drink.name, drink %></h2>
        <p>
          <%= drink.description %><br>
          <%= drink.location %><br>
          <%= link_to 'Show', drink %>
          <%= link_to 'Edit', edit_drink_path(drink) %>
          <%= link_to 'Destroy', drink, method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      </div>

    </div>
    </div>
    <% end %>
  </div>
</div>